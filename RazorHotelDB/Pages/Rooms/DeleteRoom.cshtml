@page
@model RazorHotelDB.Pages.Rooms.DeleteRoomModel
@{
    ViewData["Title"] = "Delete room";
}
<h1>Slet værelse</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">


            <div class="form-group">
                <label asp-for="@Model.RoomToDelete.HotelNr" class="control-label"></label>
                <input asp-for="@Model.RoomToDelete.HotelNr" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="@Model.RoomToDelete.RoomNr" class="control-label"></label>
                <input asp-for="@Model.RoomToDelete.RoomNr" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.RoomToDelete.Types" class="control-label"></label>
                <input asp-for="@Model.RoomToDelete.Types" class="form-control" readonly />

            </div>

            <div class="form-group">
                <label asp-for="@Model.RoomToDelete.Pris" class="control-label"></label>
                <input asp-for="@Model.RoomToDelete.Pris" class="form-control" readonly />

            </div>

            <div class="form-group">
                <input type="submit" value="Slet" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
