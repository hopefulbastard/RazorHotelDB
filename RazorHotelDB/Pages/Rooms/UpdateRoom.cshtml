@page
@model RazorHotelDB.Pages.Rooms.UpdateRoomModel
@{
    ViewData["Title"] = "Update room";
}
<h1>Rediger værelse</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">


            <div class="form-group">
                <label asp-for="@Model.RoomToUpdate.HotelNr" class="control-label"></label>
                <input asp-for="@Model.RoomToUpdate.HotelNr" class="form-control" readonly />

            </div>
            <div class="form-group">
                <label asp-for="@Model.RoomToUpdate.RoomNr" class="control-label"></label>
                <input asp-for="@Model.RoomToUpdate.RoomNr" class="form-control" />

            </div>

            <div class="form-group">
                <label asp-for="@Model.RoomToUpdate.Types" class="control-label"></label>
                <select asp-for="@Model.TheRoomType" asp-items="Html.GetEnumSelectList<Models.RoomType>()"></select>

            </div>

            <div class="form-group">
                <label asp-for="@Model.RoomToUpdate.Pris" class="control-label"></label>
                <input asp-for="@Model.RoomToUpdate.Pris" class="form-control" />

            </div>

            <div class="form-group">
                <input type="submit" value="Rediger" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>
